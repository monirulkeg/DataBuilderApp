{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v1.2.11/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('CONN_STRING')",
    "options": {
      "set-session-context": false
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/api",
      "request-body-strict": true
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "cors": {
        "origins": [],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "development"
    }
  },
  "entities": {
    "OrganisationalUnit": {
      "source": {
        "object": "organisation.organisational_unit",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "OrganisationalUnit",
          "plural": "OrganisationalUnits"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ],
      "relationships": {
        "organisationalAddresses": {
          "cardinality": "many",
          "target.entity": "Address",
          "source.fields": [
            "Id"
          ],
          "target.fields": [
            "OrganisationalUnitId"
          ],
          "linking.source.fields": [],
          "linking.target.fields": []
        }
      }
    },
    "Organisation": {
      "source": {
        "object": "organisation.organisation",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "Organisation",
          "plural": "Organisations"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ],
      "relationships": {
        "organisationalUnits": {
          "cardinality": "many",
          "target.entity": "OrganisationalUnit",
          "source.fields": [
            "Id"
          ],
          "target.fields": [
            "OrganisationId"
          ],
          "linking.source.fields": [],
          "linking.target.fields": []
        }
      }
    },
    "Address": {
      "source": {
        "object": "organisational_unit.address",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "Address",
          "plural": "Addresses"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ],
      "relationships": {
        "AddressLocation": {
          "cardinality": "one",
          "target.entity": "Location",
          "source.fields": [],
          "target.fields": [],
          "linking.source.fields": [],
          "linking.target.fields": []
        }
      }
    },
    "Location": {
      "source": {
        "object": "location.location",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "Location",
          "plural": "Locations"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ]
    }
  }
}